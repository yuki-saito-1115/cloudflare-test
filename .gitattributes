# ==============================================================================
# EOL Settings
# ==============================================================================

*.html encoding=utf-8 eol=lf text
*.ejs encoding=utf-8 eol=lf text
*.css encoding=utf-8 eol=lf text
*.scss encoding=utf-8 eol=lf text
*.js encoding=utf-8 eol=lf text
*.cjs encoding=utf-8 eol=lf text
*.mjs encoding=utf-8 eol=lf text
*.jsx encoding=utf-8 eol=lf text
*.ts encoding=utf-8 eol=lf text
*.tsx encoding=utf-8 eol=lf text
*.astro encoding=utf-8 eol=lf text

# ==============================================================================
# LFS Settings
# ==============================================================================

# Audio Files
*.mp3 filter=lfs diff=lfs merge=lfs -text

# Video Files
*.mp4 filter=lfs diff=lfs merge=lfs -text

# Design Files
*.ai filter=lfs diff=lfs merge=lfs -text
*.fig filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.psd filter=lfs diff=lfs merge=lfs -text
*.xd filter=lfs diff=lfs merge=lfs -text

# Microsoft Word
*.doc filter=lfs diff=lfs merge=lfs -text
*.docx filter=lfs diff=lfs merge=lfs -text

# Microsoft PowerPoint
*.ppt filter=lfs diff=lfs merge=lfs -text
*.pptx filter=lfs diff=lfs merge=lfs -text

# Microsoft Excel
*.xls filter=lfs diff=lfs merge=lfs -text
*.xlsx filter=lfs diff=lfs merge=lfs -text

# Font Files
*.eot filter=lfs diff=lfs merge=lfs -text
*.otf filter=lfs diff=lfs merge=lfs -text
*.ttf filter=lfs diff=lfs merge=lfs -text
*.woff filter=lfs diff=lfs merge=lfs -text
*.woff2 filter=lfs diff=lfs merge=lfs -text

# Other Files
*.lzh filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.bz2 filter=lfs diff=lfs merge=lfs -text
*.xz filter=lfs diff=lfs merge=lfs -text